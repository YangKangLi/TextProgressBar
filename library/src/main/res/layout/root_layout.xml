<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_progress_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/v_progress"
        android:background="@drawable/bg_text_angle_at_left"
        android:text="已加载：50%"
        android:textColor="#FFFFFF" />


    <View
        android:id="@+id/v_background"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@id/tv_progress_text"
        android:background="@drawable/xml_background" />

    <View
        android:id="@+id/v_progress"
        android:layout_width="200dp"
        android:layout_height="8dp"
        android:layout_below="@id/tv_progress_text"
        android:background="@drawable/xml_progress" />

</RelativeLayout>